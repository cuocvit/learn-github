@model IEnumerable<DATA.Entity.vehicle>

@{
    ViewBag.Title = "DanhSachXe";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>DanhSachXe</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên Xe
        </th>
        <th>
            Biển Số
        </th>
        <th>
            Kiểu xe
        </th>
        <th>
            Avatar
        </th>
        <th>
            Thuộc nhà xe
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.license_plate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
           <img src="@item.avatar" width="100px" height="70px" alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bus.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
